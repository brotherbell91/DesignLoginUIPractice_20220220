<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="@drawable/login_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:src="@drawable/nepp_logo"
            android:layout_width="160dp"
            android:layout_height="160dp" />

    </LinearLayout>

    <EditText
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:textStyle="bold"
        android:hint="이메일"
        android:textColorHint="@color/Gray"
        android:backgroundTint="@color/Gray"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/id_icon_resize" />

    <EditText
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:textStyle="bold"
        android:hint="비밀번호"
        android:textColorHint="@color/Gray"
        android:backgroundTint="@color/Gray"
        android:inputType="textPassword"
        android:drawableStart="@drawable/password_icon_resize" />

    <Button
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="로그인"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/Gray" />

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="#00ff0000"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="#00ff0000"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_margin="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/kakao_login_icon" />

        <Button
            android:layout_margin="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/naver_login_icon" />

        <Button
            android:layout_margin="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/google_login_icon" />

        <Button
            android:layout_margin="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/apple_login_icon" />



    </LinearLayout>










</LinearLayout>